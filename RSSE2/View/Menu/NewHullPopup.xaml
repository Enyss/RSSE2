<Window x:Class="RSSE2.NewHullPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSSE2"
        mc:Ignorable="d"
        Title="Create New Hull" SizeToContent="WidthAndHeight">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="30" Margin="10,5,10,0">
            <Label Width="75" HorizontalAlignment="Left" Margin="3">Filename :</Label>
            <TextBox HorizontalAlignment="Stretch" Margin="3"
                     Text="{Binding Name}" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Top"  Height="35" Margin="5">
            <Button Width="100" Height="25" Margin="20,5,20,5" IsCancel="True"
                    Command="{Binding CancelCommand}">
                Cancel
            </Button>
            <Button Width="100" Height="25" Margin="20,5,10,5" IsDefault="True"
                    Command="{Binding CreateCommand}">
                Create
            </Button>
        </DockPanel>
    </DockPanel>
</Window>
